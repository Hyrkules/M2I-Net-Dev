@inherits LayoutComponentBase

@*Conteneur principa qui prend la hauteur de l'ecran*@
<div class="auth-container">
    @*Zone de contenu centrée avec la largeur limitée*@
    <div class="auth-content">
        @*@body = ici s'affiche le contenu de la page login ou register*@
        @Body
    </div>
</div>

<style>
    /* Conteneur plein écran avec fond dégradé */
    .auth-container {
        min-height: 100vh; /* 100% de la hauteur de l'écran */
        display: flex; /* Flexbox pour centrer */
        align-items: center; /* Centre verticalement */
        justify-content: center; /* Centre horizontalement */
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Dégradé violet */
    }

    /* Zone de contenu avec largeur maximale */
    .auth-content {
        width: 100%; /* Prend toute la largeur disponible */
        max-width: 420px; /* Mais pas plus de 420px */
        padding: 20px; /* Espacement intérieur */
    }
</style>
