@page "/"
@page "/Auth/LoginPage"
@using TodoListBlazor.Dtos
@using TodoListBlazor.Services
@inject IAuthService AuthService

@layout AuthLayout

@inject NavigationManager Navigation

<div class="card shadow">
    <div class="card-body p-5">
        <div class="text-center">
            <h1 class="h3 fw-bold">TODOList</h1>
            <p class="text-muted">Connectez-vous à votre compte</p>
        </div>

        @if(!string.IsNullOrEmpty(errorMessage)){
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle me-2">@errorMessage</i>
            </div>
        }

        <EditForm Model="loginDto" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <ValidationSummary class="text-danger" />

            <div>
                <label class="form-label fw-semibold">Nom d'utilisateur</label>
                    <InputText 
                        class="form-control form-control-lg" 
                        placeholder="Entrez votre nom d'utilisateur" 
                           @bind-Value="loginDto.Username" />
                    <ValidationMessage For="@(() => loginDto.Username)" class="text-message"/>
            </div>

            <div>
                <label class="form-label fw-semibold">Password</label>
                <InputText type="password" class="form-control form-control-lg"
                           placeholder="Entrez votre mot de passe"
                           @bind-Value="loginDto.Password" />
                <ValidationMessage For="@(() => loginDto.Password)" class="text-message" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Connection en cours. . .</span>
                }
                else
                {
                    <span>Se connecter</span>
                }

            </button>

        </EditForm>

        <div class="text-center">
            <span class="text-muted">Pas encore de compte ?</span>
            <a href="Auth/register" class="text-decoration-none fw-semibold">Créer un compte</a> 
        </div>

    </div>

</div>

@code{
    private LoginDto loginDto = new LoginDto();

    private string? errorMessage;

    private bool IsLoading = false;

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;

        IsLoading = true;

        try{
            var (success, error) = await AuthService.LoginAsync(loginDto);

            if (success)
            {
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                errorMessage = error;
            }
        }
        catch(Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            IsLoading = false;
        }
    }
}

