@page "/dashboard"
@using TodoListBlazor.Components
@using TodoListBlazor.Dtos
@using TodoListBlazor.Services
@inject ITodoService TodoService
@inject IAuthService AuthService
@inject NavigationManager Navigation


<PageTitle>Dashboard - TODOList</PageTitle>

@if (isLoading)
{
    <div>
        <div class="spinner-border text-primary"></div>
        <p class="mt-3 text-muted">Chargement de vos tâches</p>
    </div>
}
else
{
    <div class="d-flex  justify-content-between align-content-center mb-4">
        <div>
            <h1 class="mb-0">Mes tâches</h1>
            <p class="text-muted mb-0">Bienvenue ! Voici vos tâches</p>
        </div>
        <button class="btn btn-outline-danger" @onclick="Logout">
            <i class="bi bi-plus-lg"></i>Se Deconnecter
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card-title">
                <div class="card bg-primary text-white">
                    <h5 class="card-title">Total</h5>
                    <h2 class="mb-0">@todos.Count()</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Terminé</h5>
                    <h2 class="mb-0">@todos.Where(t=>t.isCompleted).Count()</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">En cours</h5>
                    <h2 class="mb-0">@todos.Where(t => !t.isCompleted).Count()</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-content-center">
            <h5 class="mb-0">Liste des tâches</h5>
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm" 
                    style="width:160px"
                    @bind="filtre">
                    <option value="all">Toutes</option>
                    <option value="done">Terminées</option>
                    <option value="todo">En cours</option>
                </select>
                <button class="btn btn-primary btn-sm" @onclick="ToCreatePage">
                    <i class="bi bi-plus-lg me-1"></i>Nouvelle Tâche
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!TachesFiltrees.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-1"></i>
                    <p class="mt-3">Aucune tâche pour ce filtre</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach(var todo in todos)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <TodoCard 
                                Todo="todo"
                                OnToggle="HandleToggle"
                                OnEdit="HandleEdit"
                                OnDelete="HandleDelete"> />
                        </div>
                    }
                </div>
